---
import BaseLayout from '../components/BaseLayout.astro';
import '../styles/pages/projects.css';
import { projects } from '../content/projects';
---

<BaseLayout 
  title="Khoa Ngo Projects" 
  description="A collection of projects I've worked on, showcasing my development skills and experience."
  currentPage="projects"
>
  <section class="projects-page">
    <div class="projects__container">
      <h1 class="projects__intro">A few projects that I've worked on.</h1>
      
      <div class="project-grid">
        {projects.map((project, index) => (
          <article class="project-card" data-index={index}>
            <header class="project-card__header">
              <div class="project-card__title-row">
                <h2>{project.title}</h2>
                <button 
                  class="project-card__toggle" 
                  type="button" 
                  aria-expanded="false"
                  aria-label="Expand or collapse project details"
                >
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M6 9l6 6 6-6"/>
                  </svg>
                </button>
              </div>
              <span class="project-card__period">{project.period}</span>
            </header>
            
            <p class="project-card__preview">{project.description.slice(0, 100)}...</p>
            
            <div class="project-card__content">
              <p class="project-card__description">{project.description}</p>
              
              {project.images.length > 0 && (
                <div class="project-card__gallery">
                  {project.images.map((img, i) => (
                    <img 
                      src={img} 
                      alt={`${project.title} screenshot ${i + 1}`} 
                      class="project-gallery__thumb"
                      loading="lazy"
                    />
                  ))}
                </div>
              )}
              
              <ul class="project-card__tech">
                {project.tech.map(t => (
                  <li>
                    <a href={t.url} target="_blank" rel="noopener" class="pill">{t.name}</a>
                  </li>
                ))}
              </ul>
              
              <div class="project-card__links">
                {project.links.live && (
                  <a href={project.links.live} target="_blank" rel="noopener" class="btn btn--sm">
                    Live Demo
                  </a>
                )}
                {project.links.source && (
                  <a href={project.links.source} target="_blank" rel="noopener" class="btn btn--sm btn--ghost">
                    <svg viewBox="0 0 24 24" fill="currentColor" width="16" height="16">
                      <path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/>
                    </svg>
                    Source
                  </a>
                )}
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  import { initProjectCards } from '../scripts/project-card';
  initProjectCards();
</script>
